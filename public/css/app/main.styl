// app/layout.styl

@import '../_variables'
@import '../_mixins'


// you styles here:
body
  background: white

  @import url(http://fonts.googleapis.com/css?family=Antic+Slab);

  html,body {
    height:100%;
  }

  .center {
       float: none;
       margin-left: auto;
       margin-right: auto;
  }

  h1 {
    font-family: 'Antic Slab', serif;
    font-size:80px;
    color:#DDCCEE;
  }

  .lead {
      color:#DDCCEE;
  }


  /* Custom container */
  .container-full {
    margin: 0 auto;
    width: 100%;
    min-height:100%;
    background-color:#110022;
    color:#eee;
    overflow:hidden;
  }

  .container-full a {
    color:#efefef;
    text-decoration:none;
  }

  .v-center {
    margin-top:7%;
  }

